<Window x:Class="Pagina_Principal.Gestion_Operadora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pagina_Principal"
        mc:Ignorable="d"
        Title="Gestion_Operadora"
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Viewbox Stretch="Fill">
        <Grid Width="1355" Height="710">

            <Label Content="GESTIÓN DE OPERADORAS" HorizontalAlignment="Left" Margin="495,67,0,0" 
                   VerticalAlignment="Top" Width="351" FontFamily="Poppins" FontSize="26" FontWeight="Bold" RenderTransformOrigin="-0.003,1.393"/>
            
            
            <!--DATAGRID PARA MOSTRAR DATOS-->
            <DataGrid Name="miDataGrid"
                      AutoGenerateColumns="True"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      Background="White"
                      BorderBrush="#8D98A7"
                      BorderThickness="1"
                      Grid.Row="0"
                      Margin="55,166,55,202"
                      FontFamily="Poppins"
                      FontSize="14"
                      RowBackground="White"
                      AlternatingRowBackground="#F3F3F3"
                      HorizontalGridLinesBrush="#8D98A7"
                      VerticalGridLinesBrush="#8D98A7">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#455177"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="#8D98A7"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

            </DataGrid>
            
            <!--BOTON PARA AGREGAR OPERADORA-->
            <Button Name="BtnAgregar"
                Content="Agregar" 
                FontFamily="Poppins"  
                Margin="55,574,1025,87"  
                Background="#198754" 
                Foreground="White" 
                FontSize="22" 
                BorderBrush="#198754" 
                Click="BtnAgregarOperadora"
                >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--BOTON PARA EDITAR OPERADORA-->
            <Button Name="BtnEditar"
                Content="Editar" 
                FontFamily="Poppins"  
                Margin="384,574,696,87"  
                Background="#ffc107" 
                Foreground="White" 
                FontSize="22" 
                BorderBrush="#ffc107" 
                >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--BOTON PARA ELIMINAR OPERADORA-->
            <Button Name="BtnEliminar"
                Content="Eliminar" 
                FontFamily="Poppins"  
                Margin="1025,574,55,87"  
                Background="#dc3545" 
                Foreground="White" 
                FontSize="22" 
                BorderBrush="#dc3545" 
                >
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>



        </Grid>
    </Viewbox>
</Window>
