<Window x:Class="Pagina_Principal.DetallesOperadora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pagina_Principal"
        mc:Ignorable="d"
        Title="DetallesOperadora" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Imagen -->
        <Image x:Name="ImgLogo" Grid.ColumnSpan="2" Width="100" Height="100" HorizontalAlignment="Center" />

        <StackPanel Grid.Column="0" Margin="0,120,10,0" VerticalAlignment="Top">
            <TextBlock Text="ID:" Margin="0,5"/>
            <TextBlock Text="Nombre:" Margin="0,5"/>
            <TextBlock Text="Representante:" Margin="0,5"/>
            <TextBlock Text="Email:" Margin="0,5"/>
            <TextBlock Text="Sitio Web:" Margin="0,5"/>
            <TextBlock Text="Descripción:" Margin="0,5"/>
            <TextBlock Text="Dirección:" Margin="0,5"/>
            <TextBlock Text="Identificación:" Margin="0,5"/>
            <TextBlock Text="Lada:" Margin="0,5"/>
            <TextBlock Text="Teléfono:" Margin="0,5"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="0,120,0,0" VerticalAlignment="Top">
            <TextBox x:Name="TxtId" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtNombre" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtRepresentante" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtEmail" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtSitioWeb" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtDescripcion" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtDireccion" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtIdentificacion" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtLada" IsReadOnly="True" Margin="0,5"/>
            <TextBox x:Name="TxtTelefono" IsReadOnly="True" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
