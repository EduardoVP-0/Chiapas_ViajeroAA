<Window x:Class="Pagina_Principal.Usuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuarios" Height="450" Width="800"
        FontFamily="Poppins"> <!-- Aplicamos Poppins a toda la ventana -->
    <Grid>
        <StackPanel Margin="20">
            <Label Content="TODOS LOS USUARIOS" FontSize="26" FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button x:Name="BtnAdministradores" Content="Administradores" Width="150" Margin="5" Click="BtnAdministradores_Click"/>
                <Button x:Name="BtnAgentes" Content="Agentes de Viajes" Width="150" Margin="5" Click="BtnAgentes_Click"/>
                <Button x:Name="BtnViajeros" Content="Viajeros" Width="150" Margin="5" Click="BtnViajeros_Click"/>
            </StackPanel>

            <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="*" />
                    <DataGridTextColumn Header="Correo electrónico" Binding="{Binding Correo}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>